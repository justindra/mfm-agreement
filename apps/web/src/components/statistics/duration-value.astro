---
import type { Duration } from 'tinyduration';

export interface Props {
  value: Duration;
}

const { value } = Astro.props as Props;
---

<>
  {
    Boolean(value.days) && (
      <>
        {value.days}
        <span class='text-sm mr-2'>d</span>
      </>
    )
  }
  {
    Boolean(value.hours) && (
      <>
        {value.hours}
        <span class='text-sm mr-2'>h</span>
      </>
    )
  }
  {
    Boolean(value.minutes) && (
      <>
        {value.minutes}
        <span class='text-sm mr-2'>m</span>
      </>
    )
  }
  {
    Boolean(value.seconds) && (
      <>
        {value.seconds}
        <span class='text-sm mr-2'>s</span>
      </>
    )
  }
</>
